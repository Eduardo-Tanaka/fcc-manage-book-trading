doctype html
html
	head
		title= title
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		div
			nav.navbar.navbar-default
				div.container
					div.navbar-header
						button.navbar-toggle(data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href="/") BookJump

					div.collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
						ul.nav.navbar-nav
							li
								a(href="/") Home
						ul.nav.navbar-nav.navbar-right
							if user
								li 
									a(href='/allbooks') All Books
								li 
									a(href='/mybooks') My Books
								li
									a(href='/settings') <i class='fa fa-gear'></i>
								li 
									a(href="/logout") <i class='fa fa-power-off'></i>
							else
								li
									a(href="/signup") Sign Up
								li
									a(href="/login") Login
		block content
		script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js')
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')    