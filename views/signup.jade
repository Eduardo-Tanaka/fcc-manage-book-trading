extends layout

block content
	div.container
		h1 Sign Up
		form(action='/signup', method='post')
			if message
				p #{message}
			div.row
				div.col-md-12.form-group
					label(for='name') Name
					input.form-control(type='text', placeholder='Name', id='username', name='username', required)
				div.col-md-12.form-group
					label(for='email') Email
					input.form-control(type='email', placeholder='Email', id='email', name='email', required)
				div.col-md-12.form-group
					label(for='password') Password
					input.form-control(type='password', placeholder='Password', id='password', name='password', required)
				div.col-md-12.form-group
					input.btn.btn-lg.col-md-2(type='submit', value='Sign Up')
					a.btn.btn-default.btn-lg.col-md-2(href='/login') Login
					